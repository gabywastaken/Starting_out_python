//------- Piramide------
#include <iostream>
using namespace std;

int main() {

    int rows;

    cout << "Rows ";
    cin >> rows;


    for (int i = n; i < n; i++) {
    
    std::cout << "*";
    
    }

    for (int i = 1; i <= rows; ) {
        for (int j = 1; j <= i; ) {
            cout << "* ";
            if (i % 2 == 0) {
               		cout << "*";
               		}
            else {
           			cout << ".";
              		}
        }
        cout << "\n";
   
    return 0;
}


